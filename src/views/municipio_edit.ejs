<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <form action="/municipios/updatem/<%= data.id %>" method="POST">
          <div class="form-group">
            <input type="text" name="name" value="<%= data.municipio%>" placeholder="Municipio" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="dep" value="<%= data.departamento%>" placeholder="Departamento" class="form-control">
          </div>

          <button type="submit" class="btn btn-primary">
            Actualizar Municipio
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>
